            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage BackgroundColor="Purple">
        <ContentPage.Content>
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Third Carousel View">
                </Label>
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
